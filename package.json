{
  "name": "adservice-api",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --watch src --exec \"babel-node ./src/bin/www\"",
    "build": "babel ./src -d dist --copy-files --ignore **/__tests__/** && npm run copy",
    "copy": "mkdir dist\\environments 2> NUL && copy src\\environments\\* dist\\environments\\ && copy package.json dist\\",
    "prod:local": "cross-env NODE_ENV=production node ./bin/www.js",
    "prod": "NODE_ENV=production pm2 start bin/www --name api",
    "del": "pm2 delete api || true"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb-uri": "^0.9.7",
    "mongoose": "^8.18.2",
    "morgan": "~1.9.1",
    "ms": "^2.1.3",
    "node-mailjet": "^6.0.9",
    "pino": "^9.11.0",
    "pino-pretty": "^13.1.1",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "@babel/cli": "^7.28.3",
    "@babel/core": "^7.28.4",
    "@babel/node": "^7.28.0",
    "@babel/preset-env": "^7.28.3",
    "cross-env": "^10.1.0"
  }
}
